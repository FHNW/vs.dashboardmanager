<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="vs.dashboardmanager">

  <body>
    <div metal:fill-slot="main">

        <h1>vs.dashboardmanager</h1>

        <table class="listing" tal:define="templates view/available_dashboard_pages">
            <thead>
                <tr>   
                    <th>ID</th>   
                    <th>Title</th>   
                </tr>   
            </thead>

            <tbody>
                <tr tal:repeat="template templates">
                    <td>
                        <a tal:attributes="href string:${template/getURL}" 
                           tal:content="template/getId" />
                    </td> 
                    <td tal:content="template/Title"/>
                </tr>
            </tbody>
        </table>

        <a tal:attributes="href string:$portal_url/@@new-dashboard-page">New dashboard page</a>

    </div>
  </body>
</html>
